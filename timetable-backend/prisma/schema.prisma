generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Classroom {
  id        Int      @id @default(autoincrement())
  name      String
  capacity  Int
  schedules Schedule[]
}

model Faculty {
  id        Int      @id @default(autoincrement())
  name      String
  subject   String
  schedules Schedule[]
}

model Subject {
  id          Int      @id @default(autoincrement())
  name        String
  code        String
  totalHours  Int
  schedules   Schedule[]
}

model Schedule {
  id         Int      @id @default(autoincrement())
  day        String
  timeSlot   String
  classroom  Classroom @relation(fields: [classroomId], references: [id])
  classroomId Int
  faculty    Faculty   @relation(fields: [facultyId], references: [id])
  facultyId   Int
  subject    Subject   @relation(fields: [subjectId], references: [id])
  subjectId   Int
}
